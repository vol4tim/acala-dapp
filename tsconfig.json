{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./packages",
    "paths": {
      "@acala-dapp/apps/*": ["apps/src/*"],
      "@acala-dapp/apps": ["apps/src"],
      "@acala-dapp/page-wallet": ["page-wallet/src"],
      "@acala-dapp/page-wallet/*": ["page-wallet/src/*"],
      "@acala-dapp/page-homa": ["page-homa/src"],
      "@acala-dapp/page-homa/*": ["page-homa/src/*"],
      "@acala-dapp/page-loan": ["page-loan/src"],
      "@acala-dapp/page-loan/*": ["page-loan/src/*"],
      "@acala-dapp/page-swap": ["page-swap/src"],
      "@acala-dapp/page-swap/*": ["page-swap/src/*"],
      "@acala-dapp/page-liquidity": ["page-liquidity/src"],
      "@acala-dapp/page-liquidity/*": ["page-liquidity/src/*"],
      "@acala-dapp/page-incentives": ["page-incentives/src"],
      "@acala-dapp/page-incentives/*": ["page-incentives/src/*"],
      "@acala-dapp/page-nft": ["page-nft/src"],
      "@acala-dapp/page-nft/*": ["page-nft/src/*"],
      "@acala-dapp/page-governance": ["page-governance/src"],
      "@acala-dapp/page-governance/*": ["page-governance/src/*"],
      "@acala-dapp/page-dashboard-home": ["page-dashboard-home/src"],
      "@acala-dapp/page-liquidations-charts": ["page-liquidations-charts/src"],
      "@acala-dapp/page-stablecoin-overview": ["page-stablecoin-overview/src"],
      "@acala-dapp/page-oracles-charts": ["page-oracles-charts/src"],
      "@acala-dapp/page-loan-charts": ["page-loan-charts/src"],
      "@acala-dapp/page-loan-charts/*": ["page-loan-charts/src/*"],
      "@acala-dapp/page-swap-charts": ["page-swap-charts/src"],
      "@acala-dapp/page-swap-charts/*": ["page-swap-charts/src/*"],
      "@acala-dapp/page-treasury-charts": ["page-treasury-charts/src"],
      "@acala-dapp/page-treasury-charts/*": ["page-treasury-charts/src/*"],
      "@acala-dapp/react-hooks/*": ["react-hooks/src/*"],
      "@acala-dapp/react-hooks": ["react-hooks/src"],
      "@acala-dapp/react-environment/*": ["react-environment/src/*"],
      "@acala-dapp/react-environment": ["react-environment/src"],
      "@acala-dapp/react-components/*": ["react-components/src/*"],
      "@acala-dapp/react-components": ["react-components/src"],
      "@acala-dapp/ui-components/*": ["ui-components/src/*"],
      "@acala-dapp/ui-components": ["ui-components/src"]
    },
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "scripts/*"
  ]
}
